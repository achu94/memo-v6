---
import config from "@/config/config.json";
---

<section class="relative overflow-hidden" style="background-color: var(--color-primary);">
	<div class="container section-sm py-20">
		<div class="text-center text-white animate-fade-in-up">
			<h1 class="h1 mb-6">
				{config.site.name}
			</h1>
			<p class="text-xl md:text-2xl mb-8 opacity-90 animate-fade-in" style="animation-delay: 0.2s;">
				{config.site.tagline}
			</p>
			<p class="text-lg mb-12 max-w-2xl mx-auto opacity-80 animate-fade-in" style="animation-delay: 0.4s;">
				Professioneller Trockenbau, Innenausbau und Akustikdecken
				in Berlin und Umgebung. Über 20 Jahre Erfahrung für perfekte
				Ergebnisse.
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center animate-fade-in" style="animation-delay: 0.6s;">
				{config.navigation_button.enable && (
					<a
						href={config.navigation_button.link}
						class="btn btn-lg"
						style="background-color: white; color: var(--color-primary);"
					>
						{config.navigation_button.label}
					</a>
				)}
				<a href="#leistungen" class="btn btn-outline-white btn-lg">
					Leistungen ansehen
				</a>
			</div>
		</div>
	</div>
	<!-- Decorative Background Pattern -->
	<div class="absolute inset-0 opacity-5">
		<div class="absolute top-0 left-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
		<div class="absolute bottom-0 right-0 w-96 h-96 bg-white rounded-full blur-3xl"></div>
	</div>
</section>
