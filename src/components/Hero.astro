---
import config from "@/config/config.json";
---

<section class="py-16 px-4" style="background-color: var(--color-primary);">
	<div class="container">
		<div class="text-center text-white">
			<h1 class="text-4xl md:text-5xl font-bold mb-6">
				{config.site.name}
			</h1>
			<p class="text-xl md:text-2xl mb-8 opacity-90">
				{config.site.tagline}
			</p>
			<p class="text-lg mb-8 max-w-2xl mx-auto opacity-80">
				Professioneller Trockenbau, Innenausbau und Akustikdecken
				in Berlin und Umgebung. Über 20 Jahre Erfahrung für perfekte
				Ergebnisse.
			</p>
			<div class="flex flex-col sm:flex-row gap-4 justify-center">
				{config.navigation_button.enable && (
					<a
						href={config.navigation_button.link}
						class="btn btn-lg"
						style="background-color: white; color: var(--color-primary);"
					>
						{config.navigation_button.label}
					</a>
				)}
				<a href="#leistungen" class="btn btn-outline btn-lg" style="border-color: white; color: white;">
					Leistungen ansehen
				</a>
			</div>
		</div>
	</div>
</section>
