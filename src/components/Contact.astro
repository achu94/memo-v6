---
import config from "@/config/config.json";
---

<section id="kontakt" class="section bg-gradient-to-br from-gray-50 to-white relative overflow-hidden">
	<!-- Background Decoration -->
	<div class="absolute top-0 right-0 w-96 h-96 rounded-full bg-blue-500/5 blur-3xl"></div>
	<div class="absolute bottom-0 left-0 w-96 h-96 rounded-full bg-purple-500/5 blur-3xl"></div>

	<div class="container relative z-10">
		<!-- Section Header -->
		<div class="text-center mb-16">
			<div class="inline-block mb-4 px-4 py-2 rounded-full bg-gradient-to-r from-blue-500 to-purple-500 text-white text-sm font-semibold animate-fade-in-up">
				Kontaktieren Sie uns
			</div>
			<h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-6 text-gray-900 animate-fade-in-up">
				Lassen Sie uns sprechen
			</h2>
			<p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto animate-fade-in" style="animation-delay: 0.2s;">
				Haben Sie Fragen oder mÃ¶chten Sie ein unverbindliches Angebot
				anfordern? Wir freuen uns auf Ihre Nachricht!
			</p>
		</div>

		<!-- Contact Info & Form -->
		<div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
			<!-- Contact Info -->
			<div class="animate-fade-in-up" style="animation-delay: 0.3s;">
				<div class="p-8 rounded-2xl bg-white shadow-xl border border-gray-100 hover:shadow-2xl transition-shadow duration-500">
					<h3 class="text-2xl font-bold mb-8 text-gray-900">
						Kontaktinformationen
					</h3>

					<div class="space-y-6">
						{[
							{ icon: "ðŸ“", label: "Adresse", value: "Berlin und Umgebung" },
							{ icon: "ðŸ“ž", label: "Telefon", value: "030 / 123 456 789" },
							{ icon: "âœ‰ï¸", label: "E-Mail", value: "info@hmtrockenbau.de" },
							{ icon: "â°", label: "Arbeitszeiten", value: ["Mo - Fr: 7:00 - 18:00 Uhr", "Sa: Nach Vereinbarung"] },
						].map((item, index) => (
							<div class="group">
								<div
									class="flex items-start gap-4 p-4 rounded-xl bg-gray-50 hover:bg-gradient-to-r hover:from-blue-50 hover:to-purple-50 transition-all duration-300 hover:-translate-x-2"
									style={`animation-delay: ${0.1 + index * 0.1}s;`}
								>
									<div class="text-3xl group-hover:scale-110 transition-transform duration-300">
										{item.icon}
									</div>
									<div>
										<h4 class="font-semibold mb-2 text-gray-900">
											{item.label}
										</h4>
										{Array.isArray(item.value) ? (
											item.value.map((v, i) => (
												<p key={i} class="text-gray-600">
													{v}
												</p>
											))
										) : (
											<p class="text-gray-600">
												{item.value}
											</p>
										)}
									</div>
								</div>
							</div>
						))}
					</div>
				</div>
			</div>

			<!-- Contact Form -->
			<div class="animate-scale-in" style="animation-delay: 0.4s;">
				<div class="p-8 rounded-2xl bg-white shadow-xl border border-gray-100 hover:shadow-2xl transition-shadow duration-500">
					<h3 class="text-2xl font-bold mb-8 text-gray-900">
						Nachricht senden
					</h3>
					<form class="space-y-6">
						{[
							{ id: "name", label: "Name *", type: "text", placeholder: "Ihr Name" },
							{ id: "email", label: "E-Mail *", type: "email", placeholder: "ihre@email.de" },
							{ id: "phone", label: "Telefon", type: "tel", placeholder: "030 / 123 456 789" },
						].map((field) => (
							<div>
								<label
									for={field.id}
									class="block mb-3 font-semibold text-gray-900"
								>
									{field.label}
								</label>
								<input
									type={field.type}
									id={field.id}
									name={field.id}
									placeholder={field.placeholder}
									required={field.label.includes("*")}
									class="w-full px-5 py-4 rounded-xl border-2 border-gray-200 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-300 hover:border-gray-300"
								/>
							</div>
						))}

						<div>
							<label
								for="message"
								class="block mb-3 font-semibold text-gray-900"
							>
								Nachricht *
							</label>
							<textarea
								id="message"
								name="message"
								rows="5"
								placeholder="Ihre Nachricht an uns..."
								required
								class="w-full px-5 py-4 rounded-xl border-2 border-gray-200 bg-gray-50 focus:bg-white focus:border-blue-500 focus:ring-4 focus:ring-blue-500/10 transition-all duration-300 hover:border-gray-300 resize-y"
							></textarea>
						</div>

						<button
							type="submit"
							class="group relative w-full px-8 py-4 rounded-xl font-semibold bg-gradient-to-r from-blue-600 to-purple-600 text-white shadow-xl shadow-blue-500/30 hover:shadow-2xl hover:shadow-blue-500/50 hover:-translate-y-1 transition-all duration-300"
						>
							<span class="relative z-10">Nachricht absenden</span>
							<div class="absolute inset-0 rounded-xl bg-gradient-to-r from-blue-700 to-purple-700 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
							<span class="relative z-10 group-hover:text-white transition-colors duration-300">
								Nachricht absenden â†’
							</span>
						</button>
					</form>
				</div>
			</div>
		</div>
	</div>
</section>
